<h2>Dashboard</h2>

{{#if reports.length}}
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each reports}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.date}}</td>
      <td>{{this.status}}</td>
      <td><a href="/items/{{this.id}}">View Details</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>No reports yet. <a href="/report">Submit one.</a></p>
{{/if}}

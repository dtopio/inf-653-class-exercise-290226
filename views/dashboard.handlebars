<h2>Dashboard</h2>

<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Status</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    {{#if reports.length}}
      {{#each reports}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>{{date}}</td>
          <td>{{status}}</td>
          <td><a href="/items/{{id}}">View Details</a></td>
        </tr>
      {{/each}}
    {{else}}
      <tr>
        <td colspan="5">No reports yet.</td>
      </tr>
    {{/if}}
  </tbody>
</table>